@import './normalize.css'
@import './variables.styl'

html, body {
	margin: 0
	padding: 0
	font-size: 16px
	font-family: 'Ubuntu', sans-serif;
	line-height: 1.5
	-webkit-font-smoothing: antialiased // @stylint ignore
	-moz-osx-font-smoothing: grayscale // @stylint ignore

	@media screen and (max-width: 768px) {
		font-size: 12px
	}
}

a {
	color: inherit
	text-decoration: none
}

hr {
	border-top: 1px solid $grey300
	border-right: 0
	border-bottom: 0
	border-left: 0
}

* {
	box-sizing: border-box
}